# multiple diff
#
if [ $# != 1 ]; then 
	echo Usage: `basename $0` dest
	echo
	exit -1
fi

DEST=$1

LIST=`find . -maxdepth 1 -type f`
for SRC in ${LIST} ; do
    FILE=`basename ${SRC}`
    if [ -f ${DEST}/${FILE} ] ; then        
        echo diff ${FILE} ${DEST}/${FILE}
        echo ========================================
        diff ${FILE} ${DEST}/${FILE}
    else
        echo There is no ${DEST}/${FILE}
        echo ========================================
    fi
done

